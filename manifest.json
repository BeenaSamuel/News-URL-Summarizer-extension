{
    "manifest_version": 3,
    "name": "Precisely",
    "description": "An extension to summarize the text contents of a news website",
    "version": "1.0",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      },
    "permissions": [
        "activeTab"
    ],
    "background": {
        "service_worker": "/static/background.js"
    },
    "action": {
        "default_popup": "/templates/popup.html" ,
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
          }
        
    }
}
